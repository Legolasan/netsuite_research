# NetSuite Documentation Vectorization - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1  # or your preferred region

# Index Configuration
PINECONE_INDEX_NAME=netsuite-docs

# PDF Source Directory (relative to this file or absolute path)
PDF_SOURCE_DIR=../../

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=text-embedding-3-small
BATCH_SIZE=100
